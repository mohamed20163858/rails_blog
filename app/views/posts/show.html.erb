<div class="post" id="<%=@post.id%>">
    <h2><%= @post.title %></h2>
    <p><%= @post.text %></p>
    <p class="reactions">Comments: <%= @post.comments_counter %>, Likes: y </p>
    </div>
    <div class="comments">
      <% @post.comments.each do |comment| %>
        <p><%= User.find_by(id:comment.author_id).name%>: <%= comment.text %></p>
      <% end %>
</div>